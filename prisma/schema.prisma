datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")   // Vercel Neon integration sets this
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id             Int      @id @default(autoincrement())
  author         String
  content        String?
  mediaUrl       String?
  type           String   @default("text")
  views          Int      @default(0)
  createdAt      DateTime @default(now())

  reactMindBlown Int      @default(0)
  reactFire      Int      @default(0)
  reactHundred   Int      @default(0)
  reactFlex      Int      @default(0)
  reactDash      Int      @default(0)
  reactHeart     Int      @default(0)
}
